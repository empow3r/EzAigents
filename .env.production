# Ez Aigent Production Environment Configuration

# Node Environment
NODE_ENV=production

# Redis Configuration
REDIS_URL=redis://redis:6379
REDIS_PASSWORD=ezaigent123
REDIS_PORT=6379

# Dashboard Configuration
DASHBOARD_PORT=3000
DASHBOARD_AUTH=false
DASHBOARD_USERNAME=admin
DASHBOARD_PASSWORD=secure123

# API Keys (Replace with your actual keys)
CLAUDE_API_KEY=your-claude-api-key-here
OPENAI_API_KEY=your-openai-api-key-here
DEEPSEEK_API_KEYS=your-deepseek-key1,your-deepseek-key2
MISTRAL_API_KEY=your-mistral-api-key-here
GEMINI_API_KEY=your-gemini-api-key-here

# Agent Health Monitoring
AGENT_HEALTH_CHECK_INTERVAL=30
AGENT_ALERT_THRESHOLD=120
AGENT_AUTO_RESTART=true

# WebScraper Configuration
SCRAPER_HEADLESS=true
PUPPETEER_ARGS=--no-sandbox,--disable-setuid-sandbox,--disable-dev-shm-usage,--disable-gpu

# Resource Limits (for Docker)
MEMORY_LIMIT_CLAUDE=768M
MEMORY_LIMIT_WEBSCRAPER=1.5G
MEMORY_LIMIT_DASHBOARD=512M
MEMORY_LIMIT_REDIS=256M
MEMORY_LIMIT_HEALTH=128M

# Data Directory (for bind mounts)
DATA_DIR=./data

# Load Balancer (Optional)
HTTP_PORT=80
HTTPS_PORT=443

# Logging Configuration
LOG_LEVEL=info
LOG_MAX_SIZE=10m
LOG_MAX_FILES=3

# Security Configuration
SECURITY_SCAN_ENABLED=true
CONTAINER_SECURITY=true

# Coordination System
COORDINATION_ENABLED=true
AGENT_REGISTRY_TTL=300
FILE_LOCK_TIMEOUT=30000
SHARED_STATE_TTL=3600

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_INTERVAL=24h
BACKUP_RETENTION=7d