# Ez Aigent Production Environment Configuration
# Copy to .env and update with your actual API keys

# ==============================
# CORE SYSTEM CONFIGURATION
# ==============================

# Node Environment
NODE_ENV=production

# Redis Configuration
REDIS_URL=redis://redis:6379
REDIS_PASSWORD=

# System Paths
FILEMAP_PATH=/shared/filemap.json
TOKENPOOL_PATH=/shared/tokenpool.json

# ==============================
# API KEYS (REQUIRED)
# ==============================

# Claude API Key (OpenRouter recommended)
CLAUDE_API_KEY=sk-or-cl-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# OpenAI API Key
OPENAI_API_KEY=sk-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# DeepSeek API Keys (comma-separated for rotation)
DEEPSEEK_API_KEYS=sk-ds-1xxxxxxxxx,sk-ds-2xxxxxxxxx,sk-ds-3xxxxxxxxx

# Mistral API Key
MISTRAL_API_KEY=sk-mistralxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Gemini API Key
GEMINI_API_KEY=AIzaxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# ==============================
# AUTO-SCALER CONFIGURATION
# ==============================

# Scaling Thresholds
MIN_AGENTS=1
MAX_AGENTS=10
SCALE_UP_THRESHOLD=20
SCALE_DOWN_THRESHOLD=5
COOLDOWN_PERIOD=300

# Performance Monitoring
MONITORING_INTERVAL=15000
PERFORMANCE_WINDOW=60000
COST_OPTIMIZATION=true

# ==============================
# EFFICIENCY TRACKING
# ==============================

# Efficiency Monitoring
EFFICIENCY_TRACKING=true
EFFICIENCY_REPORT_INTERVAL=300000
TOKEN_USAGE_ALERTS=true
EFFICIENCY_TARGET=90

# ==============================
# LOGGING & MONITORING
# ==============================

# Log Levels
LOG_LEVEL=info
AGENT_LOG_LEVEL=info
DASHBOARD_LOG_LEVEL=warn

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30000
HEALTH_CHECK_TIMEOUT=10000
HEALTH_CHECK_RETRIES=3

# Alert Configuration (optional)
ALERT_WEBHOOK_URL=
SLACK_WEBHOOK_URL=
DISCORD_WEBHOOK_URL=

# ==============================
# SECURITY CONFIGURATION
# ==============================

# Security Scanning
SECURITY_SCAN_ENABLED=true
SECURITY_SCAN_INTERVAL=3600000

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_WINDOW=60000
RATE_LIMIT_MAX_REQUESTS=100

# ==============================
# DASHBOARD CONFIGURATION
# ==============================

# Dashboard Settings
DASHBOARD_PORT=3000
DASHBOARD_HOST=0.0.0.0
NEXT_TELEMETRY_DISABLED=1

# Session Management
SESSION_SECRET=change-this-in-production-to-a-secure-random-string
SESSION_TIMEOUT=86400000

# ==============================
# AGENT CONFIGURATION
# ==============================

# Claude Agent
CLAUDE_MODEL=claude-3-opus
CLAUDE_MAX_CONTEXT=200000
CLAUDE_TEMPERATURE=0.3
CLAUDE_MAX_TOKENS=1500

# GPT Agent
GPT_MODEL=gpt-4o
GPT_MAX_CONTEXT=128000
GPT_TEMPERATURE=0.2
GPT_MAX_TOKENS=1200

# DeepSeek Agent
DEEPSEEK_MODEL=deepseek-coder
DEEPSEEK_MAX_CONTEXT=32000
DEEPSEEK_TEMPERATURE=0.1
DEEPSEEK_MAX_TOKENS=800

# Mistral Agent
MISTRAL_MODEL=command-r-plus
MISTRAL_MAX_CONTEXT=32000
MISTRAL_TEMPERATURE=0.2
MISTRAL_MAX_TOKENS=1000

# Gemini Agent
GEMINI_MODEL=gemini-pro
GEMINI_MAX_CONTEXT=32000
GEMINI_TEMPERATURE=0.2
GEMINI_MAX_TOKENS=1000

# ==============================
# DOCKER & DEPLOYMENT
# ==============================

# Container Configuration
DOCKER_BUILDKIT=1
COMPOSE_DOCKER_CLI_BUILD=1

# Resource Limits
RUNNER_MEMORY_LIMIT=1g
RUNNER_CPU_LIMIT=0.5
AGENT_MEMORY_LIMIT=512m
AGENT_CPU_LIMIT=0.3

# ==============================
# DEVELOPMENT OVERRIDES
# ==============================

# Development specific settings
# Uncomment for development mode
# NODE_ENV=development
# LOG_LEVEL=debug
# HEALTH_CHECK_INTERVAL=60000