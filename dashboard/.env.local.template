# EzAigent Environment Configuration Template
# Copy this to .env.local and fill in your actual API keys
# NEVER commit .env.local to version control

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your-secure-redis-password

# API Keys (Get from respective providers)
# For Claude, use rotating keys for load balancing
CLAUDE_API_KEY=your-claude-api-key-here

# OpenAI API Keys - rotating for load balancing  
OPENAI_API_KEY=your-openai-api-key-here

# Multiple DeepSeek keys for rotation
DEEPSEEK_API_KEYS=your-deepseek-keys-here

# Mistral API Key
MISTRAL_API_KEY=your-mistral-api-key-here

# Gemini API Keys - rotating for load balancing
GEMINI_API_KEY=your-gemini-api-keys-here

# OpenRouter Keys (Alternative provider)
OPENROUTER_API_KEY=your-openrouter-key-here

# Dashboard Configuration
DASHBOARD_PORT=3000
DASHBOARD_HOST=localhost
DASHBOARD_URL=http://localhost:3000

# Agent Configuration
MAX_AGENTS=100
AGENT_TIMEOUT=300000
AGENT_RETRY_ATTEMPTS=3
AGENT_MEMORY_PATH=./.agent-memory
MAX_CONTEXT_SIZE=150000

# Auto-Scaling Configuration
MIN_AGENTS=1
MAX_AGENTS=10
SCALE_UP_THRESHOLD=20
SCALE_DOWN_THRESHOLD=5
SCALING_INTERVAL=30000
COOLDOWN_PERIOD=300000

# Queue Configuration
QUEUE_RETRY_DELAY=5000
QUEUE_MAX_RETRIES=5
FAILED_TASK_TTL=86400

# Monitoring
ENABLE_MONITORING=true
METRICS_PORT=9090
HEALTH_CHECK_INTERVAL=30000
ALERT_QUEUE_DEPTH=100
ALERT_ERROR_RATE=0.05
ALERT_RESPONSE_TIME=30000

# Security
JWT_SECRET=generate-a-secure-random-jwt-secret-minimum-32-characters
API_RATE_LIMIT=100
SESSION_TIMEOUT=1800000
ENABLE_HTTPS=true

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=./logs/ezaugent.log
DEBUG=ez-aigent:*
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5

# File Paths
FILEMAP_PATH=./shared/filemap.json
TOKENPOOL_PATH=./shared/tokenpool.json

# Cost Tracking
ENABLE_COST_TRACKING=true
COST_ALERT_THRESHOLD=100
COST_CLAUDE_PER_1K=0.015
COST_GPT4_PER_1K=0.03
COST_DEEPSEEK_PER_1K=0.001
COST_MISTRAL_PER_1K=0.002
COST_GEMINI_PER_1K=0.001

# Enhancement System
ENHANCEMENT_QUEUE_PREFIX=queue:enhancement:
ENHANCEMENT_CONCURRENCY=2

# Performance Tuning
REDIS_POOL_SIZE=10
AGENT_CONCURRENCY=3
BATCH_SIZE=10

# Development/Testing
TEST_MODE=false
MOCK_API_CALLS=false
TEST_DATA_DIR=./test-data

# Environment
NODE_ENV=production
DEPLOYMENT_TYPE=docker

# Feature Flags
ENABLE_CHAT=true
ENABLE_3D_WORKSPACE=true
ENABLE_VOICE_COMMANDS=false
ENABLE_AUTO_DOCUMENTATION=true
ENABLE_SECURITY_SCANNING=true

# Experimental Features
ENABLE_AI_SUGGESTIONS=false
ENABLE_PREDICTIVE_SCALING=false
ENABLE_NEURAL_OPTIMIZATION=false