{
  "enabled": true,
  "defaultPriority": "normal",
  "priorityLevels": {
    "critical": {
      "weight": 10,
      "color": "#dc2626",
      "description": "System critical tasks - security fixes, production outages",
      "maxWaitTime": 30000,
      "examples": ["security-patch", "production-hotfix", "system-recovery"]
    },
    "high": {
      "weight": 5,
      "color": "#ea580c", 
      "description": "Important business tasks - new features, major bugs",
      "maxWaitTime": 300000,
      "examples": ["feature-implementation", "major-bug-fix", "api-enhancement"]
    },
    "normal": {
      "weight": 1,
      "color": "#059669",
      "description": "Standard development tasks - regular features, refactoring",
      "maxWaitTime": 1800000,
      "examples": ["code-refactoring", "standard-feature", "documentation"]
    },
    "low": {
      "weight": 0.5,
      "color": "#0891b2",
      "description": "Minor improvements - optimization, cleanup",
      "maxWaitTime": 3600000,
      "examples": ["code-cleanup", "minor-optimization", "style-improvements"]
    },
    "deferred": {
      "weight": 0.1,
      "color": "#6b7280",
      "description": "Non-urgent tasks - experiments, research",
      "maxWaitTime": 86400000,
      "examples": ["research-spike", "experimental-feature", "analysis-task"]
    }
  },
